<%= semantic_form_for @campaign do |f| %>

  <%= f.input :name %>

  <% 3.times do |i| %>
    <%=
      f.input :required_instructions,
      input_html: { name: 'campaign[required_instructions][]' },
      label: "Required instruction ##{i + 1}"
    %>
  <% end %>
  <% 3.times do |i| %>
    <%=
      f.input :optional_instructions,
      input_html: { name: 'campaign[optional_instructions][]' },
      label: "Optional instruction ##{i + 1}"
    %>
  <% end %>
  <%= f.input :full_text, :input_html => {:rows => 10  } %>
  <%= f.actions %>
<% end %>
