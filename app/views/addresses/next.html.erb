<% if @address.nil? %>
  No addresses left!

  <input type="button" value="Refresh Page" onClick="window.location.reload()">
<% else %>
  <pre><%= @address.address %></pre>
  <%= link_to 'Completed!', completed_address_path(@address) %> |
  <%= link_to 'Put back in the pool', uncompleted_address_path(@address) %>
<% end %>
