<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<table id="users">
  <tr>
    <th>Email</th>
    <th>Role</th>
    <th>Pending?</th>
    <th></th>
    <th></th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <td><%= user.pending? ? 'pending' : '' %></td>
      <td><%= link_to "show", user %></td>
      <td><%= link_to "delete", user, method: :delete %></td>
    </tr>
  <% end %>
</table>

<p style="margin-top: 50px">Non-pending user emails:<p>
<textarea readonly="readonly"><%= User.where(pending: false).pluck(:email).join(', ') %></textarea>

<p><%= link_to('Create user', new_user_path) %>
